                android:src="@drawable/blank_transparent_square"
                tools:src="@drawable/lsu_logo" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_20"
                android:layout_weight="1"
